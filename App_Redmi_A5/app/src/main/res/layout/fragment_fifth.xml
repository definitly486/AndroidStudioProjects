<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Оборачиваем LinearLayout внутрь ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp">

        <LinearLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".MainActivity"
            tools:ignore="UselessParent">

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Введите пароль"
        app:layout_constraintBottom_toTopOf="@+id/downloadplumaprofile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/downloadplumaprofile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Скачать plumaprofile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.269" />

    <Button
        android:id="@+id/installplumaprofile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Установить plumaprofile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/downloadplumaprofile"
        app:layout_constraintVertical_bias="0.104" />

    <Button
        android:id="@+id/downloadtelegramprofile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Скачать org.thunderdog.challegram"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/installplumaprofile"
        app:layout_constraintVertical_bias="0.154" />

    <Button
        android:id="@+id/installtelegramprofile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Установить org.thunderdog.challegram"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.71" />

            <Button
                android:id="@+id/downloadk9mailprofile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Скачать com.fsck.k9"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/installplumaprofile"
                app:layout_constraintVertical_bias="0.154" />

            <Button
                android:id="@+id/installk9mailprofile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Установить com.fsck.k9"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.526"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.71" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>