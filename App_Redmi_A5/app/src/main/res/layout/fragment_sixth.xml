<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Виджет для ввода адреса репозитория -->
    <EditText
        android:id="@+id/repo_url_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="Введите URL репозитория"/>

    <!-- Кнопка для запуска клонирования -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_clone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_clone"
        app:icon="@drawable/ic_gitclone"
        app:iconGravity="start"
        app:iconPadding="8dp"
        app:iconTint="@null"
        android:backgroundTint="?attr/colorPrimary"
        style="@style/Widget.MaterialComponents.Button"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>

